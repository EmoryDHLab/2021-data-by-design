---
import MapScroller from "~/components/global/MapScroller.vue";
import Chapter from "~/components/chapter.astro";
import Captioned from "~/components/global/astro/Captioned.astro";
import MoveBorder from "~/components/global/astro/MoveBorder.astro";

---
<Chapter name="peabody">
  <div slot="Map Scroller">
      <Captioned>
        <MoveBorder>
          <MapScroller
            client:visible
            class="centered-image"
            imagePath="peabody/railroadscaled.jpg"
            points={[
              { x: 3700, y: -200, scale: 3 },
              { x: 1300, y: 1500, scale: 3 },
              { x: 2750, y: 1350, scale: 3 },
            ]}
          >
          </MapScroller>
        </MoveBorder>
        <p slot="caption">
          The range of Peabody's promotional tour, as plotted on an 1850 rail
          map of the United States. Image courtesy of the Library of Congress,
          Geography and Map Division.
        </p>
      </Captioned>
  </div>

</Chapter>